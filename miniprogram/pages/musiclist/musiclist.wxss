.detail-container{
    height: 320rpx;
    filter: blur(40rpx);
    opacity: 0.4
}

.detail-mask{
    position: absolute;
    width:100%;
    height: 320rpx;
    background-color: #333;
    top: 0;
    left: 0;
    z-index: -1
}
.detail-info{
    display: flex;
    align-items:center;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 320rpx;
    padding: 20rpx;
    box-sizing: border-box
}
.detail-img image{
    width: 280rpx;
    height: 280rpx;
    margin-right: 24rpx;
    border-radius: 6rpx
}
.detail{
    flex-grow: 1; 
    line-height: 60rpx;
    width: 0;
}

.detail-name{
    color:#fff;
    font-size: 36rpx;
    font-weight: 400;
}