.music-container{
    display: flex;
    padding: 14rpx 20rpx
}
.playing view,.playing text{
    color:#d43c33
}


.music-index{
    display: flex;
    justify-content: center;
    align-items: center;
    color: #333;
    /* background-color: #d43c33; */
    width: 60rpx;
    height: 80rpx;
    font-size: 34rpx;
    font-weight: 400;
}
.music-info{
    flex-grow:1;
    width:0;
    padding: 0 20rpx
}
.music-name{
    font-size: 32rpx;
    color: #333;
    overflow: hidden;
    text-overflow: allipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1; 
    -webkit-box-orient: vertical; 
}
.music-name text{
    color: #999
}
.music-singer{
    color:#999;
    font-size: 24rpx;
    overflow: hidden;
    text-overflow: allipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1; 
    -webkit-box-orient: vertical; 
}

