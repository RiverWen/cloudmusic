.playlist-container{
    width:220rpx;
    position:relative;
    padding-bottom:20rpx
}
.playlist-img{
    width:100%;
    height: 220rpx;
    border-radius:5rpx
}

.playlist-playcount{
    font-size: 24rpx;
    color:#fff;
    text-shadow: 1px 0 0 rgb(54, 29, 29);
    position: absolute;
    top: 4rpx;
    right: 12rpx;
    padding-left: 38rpx;
    background: url('data:image/svg+xml;base64,') no-repeat
}
.playlist-name{
    font-size: 24rpx;
    line-height: 1.2;
    padding: 2px 0 0 6px;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:2;
    overflow: hidden;
    text-overflow: ellipsis

}