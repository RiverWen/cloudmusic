.progress-container{
    display: flex;
    align-items: center;
    justify-content: center;
}
.control{
    position: relative;
    flex: 1;
}
.progress-time{
    color: #fff;
    font-size: 28rpx;
    font-weight: 400;
    font-family: Consolas;
    width:80rpx;
    line-height: 30rpx;
    text-align: center;
    margin: 0 10rpx;
}
.movable-area{
    width: 100%;
    height: 34rpx;
}
.movable-view{
    width: 36rpx;
    height: 36rpx;
    background:#fefefe;
    border-radius: 50%;
    z-index: 999
}
.progress{
    position: relative;
    top:14rpx
}
